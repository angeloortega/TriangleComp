package myP ~
	recursive
		func doble(i : Integer) : Integer ~
			triplicar(i)/3*2
		|
		func triplicar(a : Integer) : Integer ~
			a + triplicar(a)
		|
		proc cuadriplicar(var b : Integer)~
			b := triplicar(triplicar(b))
		end
	end
end;
let
	var z : Integer
in
	z := myP $ triplicar(1);
	myP $ cuadriplicar(var z)
end

! OK